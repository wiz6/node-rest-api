<main role="main" class="container" id="update-form">
	<h1 class="mt-5">Client #{{id}}</h1>
	<br>
	<div id="errors"></div>
	<form id="add-form">
		<div class="form-group row">
			<label class="col-sm-1 col-form-label"><b>Email: </b></label>
			<div class="col-sm-9 email col-form-label"></div>
		</div>

		<div class="form-group row">
			<label class="col-sm-1 col-form-label"><b>Phone: </b></label>
			<div class="col-sm-9 phone col-form-label"></div>
		</div>

		<div style="margin-bottom: 20px; margin-top: 40px; font-weight: bold;">
			Extra fields:
		</div>

		<div id="extra-fields" style="padding-bottom: 30px;">
			<div class="form-group row" style="padding-left: 15px; padding-right: 15px;border-bottom: 1px solid gray;">
				<div class="col-sm-3 extra-field-input name"></div>
				<div class="col-sm-3 extra-field-input value"></div>
			</div>
		</div>
